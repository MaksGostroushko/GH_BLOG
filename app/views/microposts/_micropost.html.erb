<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>

  <span class="content">
    <strong class="h1_feed"><%= link_to("#{micropost.title}", micropost, { class: "title"}) %></strong>
    <%= link_to micropost do %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
    <% end %>
  </span>

  <span class="timestamp">
    <%= link_to 'show', micropost, class: 'btn btn-success btn-sm' %>
    <% if current_user?(micropost.user) %>
      <%= link_to "edit", edit_micropost_path(micropost), class: 'btn btn-success btn-sm'  %>
    <% end %>
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger btn-sm'  %>
    <%= link_to "published", micropost_path(micropost,{ micropost: { published: true }}), data: { confirm: 'Are you sure' }, class:'btn btn-primary btn-sm', method: :patch unless micropost.published %>
    <br>
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% end %>
    <p></p>
    <%= image_tag('eye2.png', alt: 'views', class: "views-image")%>
    <%= micropost.views_count%> |
    Comments: <%= micropost.comments.count %> |
    Likes:<%= micropost.likes_count || 0 %>
  </span>
</li>

<section class="footer-posts">
  <%= sanitize micropost.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'badge badge-info'}.join(' ') %>
</section>
