<div class="col-md-6">
  <div class="">
    <h3><strong>Post</strong></h3>
    <%= form_for @micropost do |f| %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.trix_editor :content, required: true, class: 'form-control' %>
      <%= f.file_field :picture, required: true, class: 'form-control' %>
      <br>
      <%= f.text_area :link, class: 'form-control' %>
      <%= f.submit %>
    <% end %>
  </div>
  <br>
  <div class="">
  <%= image_tag @micropost.picture.url if @micropost.picture? %>
  </div>
</div>
