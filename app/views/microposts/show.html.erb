
<div class="col-md-6">
  <div class="">
    <h3><strong>Title</strong></h3>
    <%= @micropost.title %>
    <h3><strong>Post</strong></h3>
    <%= sanitize @micropost.content %>
  </div>
  <br>
  <div class="">
  <%= image_tag @micropost.picture.url if @micropost.picture? %>
  </div>
</div>

<div class="col-md-6">
  <h3><strong>Comments</strong></h3>
<%= form_for [@micropost, Comment.new] do |f| %>
  <%= f.text_field :body, required: true, class: 'form-control' %>
  <%= f.submit 'Create comment', class: 'btn btn-success' %>
<% end %>

<% @comments.each do |comment| %>
  <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
    <p><%= comment.user.name %></p>
    <p><%= comment.body %></p>
    <%= link_to "Delete", [@micropost, comment], method: :delete if comment.user == current_user %>
    <hr>
  <% end %>
  <div class="video "><%= get_video_iframe(@micropost.link) %></div>
</div>
