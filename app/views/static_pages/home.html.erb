<% if logged_in? %>
  <div class="row">
    <aside class="col-md-6">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-6">
      <h3>Post Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
    <%= link_to image_tag("signup_new.gif", class: "sign"), signup_path %>

    <script type="text/javascript">
      setTimeout(function(){
        $('.alert-info').fadeOut();
      }, 1200);
    </script>
<% end %>
